<div class="container-fluid registration py-5">
  <div class="row">
    <div class="offset-2">
      <h2 class="">新規会員登録</h2>
    </div>
  </div>

  <div class="row mt-3">
    <div class="offset-4 col-4">
      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
       <%= render "customers/shared/error_messages", resource: resource %>

     <div class="form-group">
       <%= f.label :名前, class:"" %>
       <%= f.text_field :last_name, placeholder:"令和", class:"form-control offset-1 col-5" %>
       <%= f.text_field :first_name, placeholder:"道子", class:"form-control offset-1 col-5" %>
     </div>

     <div class="form-group">
       <%= f.label :フリガナ, class:"" %>
       <%= f.text_field :last_name_kana, placeholder:"レイワ", class:"form-control offset-1 col-5" %>
       <%= f.text_field :first_name_kana, placeholder:"ミチコ", class:"form-control offset-1 col-5" %>
     </div>

     <div class="form-group">
       <%= f.label :メールアドレス, class:"" %>
       <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example", class:"form-control offset-1 col-11" %>
     </div>

     <div class="form-group">
       <%= f.label :郵便番号（ハイフンなし）, class:"" %>
       <%= text_field :postal_code, placeholder:"0000000", class:"form-control offset-1 col-11" %>
     </div>

     <div class="form-group">
       <%= f.label :住所, class:"" %>
       <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class:"form-control offset-1 col-11" %>
     </div>

     <div class="form-group">
       <%= f.label :電話番号（ハイフンなし）, class:"" %>
       <%= f.text_field :telephone_number, placeholder:"0000000000", class:"form-control offset-1 col-11" %>
     </div>

     <div class="form-group">
       <%= f.label :パスワード（６文字以上）, class:"" %>
       <%= f.password_field :encrypted_password, autocomplete: "new-password", class:"form-control offset-1 col-11" %>
     </div>

     <div class="form-group">
       <%= f.label :パスワード（確認用）, class:"" %>
       <%= f.password_field :encrypted_password_confirmation, autocomplete: "new-password", class:"form-control offset-1 col-11" %>
     </div>

     <div class="row">
       <%= f.submit "新規登録", class:"btn btn-lg btn-danger mx-auto" %>
     </div>
     <% end %>

    </div>
  </div>

</div>