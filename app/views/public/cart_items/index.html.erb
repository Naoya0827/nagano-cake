<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="">ショッピングカート</h2>
    </div>

    <div class="ml-auto">
      <%= link_to "カートを空にする", cart_items_path, method: :delete, class:"btn btn-sm btn-danger" %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="offset-1 col-9">
      <table class="table table-borderless">
        <thead>
          <tr class="">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="1"></th>
          </tr>
        </thead>

        <% @cart_items.each do |cart_item| %>
        <tbody>
          <tr class="">
            <td class="align-middle">
              <%= attachment_image_tag cart_item.item, :image, size: "50x50", fallback: "no_image.jpg" %>
              <span><%= cart_item.item.name %></span>
            </td>
            <td class="align-middle"><%= (cart_item.item.price * 1.1).floor %></td>
            <td class="align-middle" style="width: 130px;">
             <%= form_with model:@cart_item, local:true do |f| %>
            <div class="row">
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更", class:"btn btn-sm" %>
            </div>
             <% end %>
            </td>

            <td class="align-middle">
              <%= (cart_item.item.price * 1.1).floor * cart_item.amount %>
            </td>

            <td class="align-middle">
              <%= link_to "削除する", cart_items_path(cart_item), method: :delete, class:"btn btn-sm btn-danger" %>
            </td>
              <% @合計金額 += cart_item.subtotal %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
    <div class="row">
      <div class="offset-1 col-2">
        <%= link_to "買い物を続ける", items_path, class:"" %>
      </div>
      <% if @cart_items != [] %>
      <div class="row">
        <div class="offset-6">
          <%= link_to "情報入力に進む", new_order_path, class:"btn btn-outline-danger mt-5" %>
          <% end %>
        </div>
      </div>
    </div>
</div>